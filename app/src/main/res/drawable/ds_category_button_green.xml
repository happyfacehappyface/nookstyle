<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 선택되었을 때 -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#C3D8B9"
                android:endColor="#98BA8F"
                android:angle="90" /> <!-- 위 -> 아래 -->
            <corners android:topLeftRadius="16dp" android:topRightRadius="16dp"/>
            <stroke android:width="2dp" android:color="#7FA074"/>
        </shape>
    </item>

    <!-- 기본 상태 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#D5E3CE"
                android:endColor="#C3D8B9"
                android:angle="90" /> <!-- 위 -> 아래 -->
            <corners android:topLeftRadius="16dp" android:topRightRadius="16dp"/>
            <stroke android:width="2dp" android:color="#98BA8F" />
        </shape>
    </item>
</selector>
