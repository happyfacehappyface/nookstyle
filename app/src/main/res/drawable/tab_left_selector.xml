<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#E69A99"
                android:endColor="#C97C7C"
                android:angle="270" />
            <corners android:topRightRadius="16dp" android:bottomRightRadius="16dp"/>
            <stroke android:width="2dp" android:color="#C97C7C"/>
        </shape>
    </item>
    <!-- selected -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#F2B5B3"
                android:endColor="#E69A99"
                android:angle="270" />
            <corners android:topRightRadius="16dp" android:bottomRightRadius="16dp"/>
            <stroke android:width="2dp" android:color="#E69A99" />
        </shape>
    </item>
    <!-- 기본 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F2B5B3"/>
            <corners android:topRightRadius="16dp" android:bottomRightRadius="16dp"/>
            <stroke android:width="1dp" android:color="#C48888"/>
        </shape>
    </item>
</selector>
